<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mims.mobileinformationmanagementsystem">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Mobile.MobileActivity" />
        <activity android:name=".Login.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.LoginActivity" />
        <activity android:name=".Register.RegisterActivity" />
        <activity android:name=".Management.PlusActivity" />
        <activity android:name=".Management.QueryActivity" />
        <activity android:name=".Management.UpdateActivity" />
        <activity android:name=".Management.DeleteActivity" />
        <activity android:name=".Mobile.MobileInforActivity"
                  android:theme="@style/MobileInforActivityTheme">
        </activity>
    </application>

</manifest>